task build {
    push "Building.." 
    compile "." "go build -o target/" 
    push "Done with exit code: " ++ $? 
} 

task fmt {
    push "starting formatting.... "
    foreach "./*.go" gofile {
        push "Formatting: " ++ gofile 
        shell "gofmt -w " ++ gofile 
    }
    push "Done with exit code: "  ++ $? 
}

task termlint {
    push "Linting code" 
    shell "golangci-lint run ./..." 
    push "Done with exit code: "  ++ $? 
}
