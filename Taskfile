task build {
    push "Building.." 
    compile "." "go build -o target/" 
    push "Done with exit code: " ++ $? 
} 

task fmt {
    push "Formatting" 
    foreach "./*.go" gofile {
        push "Formatting: " ++ gofile 
        shell "gofmt -w " ++ gofile 
    }
    push "Done with exit code: "  ++ $? 
}
